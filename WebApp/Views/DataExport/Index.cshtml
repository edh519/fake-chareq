@using BusinessLayer.ViewModels
@model BusinessLayer.ViewModels.DataExportViewModel
@{
    ViewData["Title"] = "Data Exports";
}

<h4>@ViewData["Title"]</h4>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card mb-4 border-info">
    <div class="card-body">
        <h5 class="card-title accessible-blue"><i class="bi bi-info-circle-fill accessible-blue"></i> Export Options</h5>
        <div class="row">
            <div class="col-md-6">
                <strong>Individual Work Requests:</strong>
                <p class="small">
                    To export a specific record, visit the Work Request Details page and click the "Export" button in the toolbar.
                </p>
            </div>
            <div class="col-md-6 border-start">
                <strong>Bulk Trial Exports:</strong>
                <p class="small">
                    Requesting a bulk export will compile all abandoned or closed work requests for the selected trial into a single ZIP file.
                    Once processed, you will receive an email notification with a download link. All exports actions are logged.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <section class="h-100 p-3 section-bg border rounded-3">
            <h4>Request a new bulk export</h4>
            <hr />
            <form asp-action="Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <select asp-for="SelectedTrialId" asp-items="Model.Trials" 
                        class="form-select">
                        <option value="">-- Select a Trial --</option>
                    </select>
                    <label asp-for="SelectedTrialId" class="form-label"></label>
                    <span asp-validation-for="SelectedTrialId" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">
                    <i class="bi bi-cloud-arrow-down-fill"></i> Queue Export Job
                </button>
            </form>
        </section>
    </div>
    <div class="col-md-6">
        <section>
            <h4>Export History</h4>
            <hr />
            @if (Model.ExportHistory.Any())
            {
                <table id="dataExportsTable" class="table table-hover table-theme-toggle">
                    <thead>
                        <tr>
                            <th>Trial</th>
                            <th>Requested</th>
                            <th>Status</th>
                            <th>Completed</th>
                            <th class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataExportJobViewModel item in Model.ExportHistory)
                        {
                            <tr>
                                <td>@item.TrialName</td>
                                <td data-sort="@item.RequestedAt.ToString("s")">@item.RequestedAt.ToString("g")</td>
                                <td><span class="badge @item.StatusCssClass">@item.Status</span></td>
                                <td data-sort="@(item.CompletedAt?.ToString("s") ?? "")">@(item.CompletedAt?.ToString("g") ?? "N/A")</td>
                                <td>
                                    @if (item.CanDownload)
                                    {
                                        <a asp-action="Download" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-download"></i> Download
                                        </a>
                                    }
                                    else
                                    {
                                        @item.ExpiredOrNoDataExported
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted-theme-toggle">No export history found.</p>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Pages/DataExport.js" asp-append-version="true"></script>

    @*This has to live here as it's accessing TempData.*@
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const downloadExportId = '@TempData["DownloadExportId"]';
            if (downloadExportId && downloadExportId.length > 0) {
                window.location.href = `${GetUrlBase()}/DataExport/Download/${downloadExportId}`;
            }
        });
    </script>
}