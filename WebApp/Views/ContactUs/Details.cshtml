@using WebApp.Controllers
@model BusinessLayer.ViewModels.ContactUsViewModel

@{
    ViewData["Title"] = "Contact Us Submission Details";
}

<div>
    <h3>Submission Details</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Submitted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Submitted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Message)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Message" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input check-large user-details-check user-edit-checkinput" asp-for="Actioned" /> @Html.DisplayNameFor(model => model.Actioned)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ActionedAt" class="control-label"></label>
                <input asp-for="ActionedAt" class="form-control" />
                <span asp-validation-for="ActionedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" spellcheck="true"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="pt-3">
    <a asp-action="@nameof(ContactUsController.Index)" class="btn btn-slim text-color-theme">Back to List</a>
</div>
