@model BusinessLayer.ViewModels.SubTaskAddViewModel;

<form asp-action="AddSubTask" asp-controller="WorkRequest" id="addSubTaskForm" method="post">
    <input type="hidden" asp-for="WorkRequestId" value="@Model.WorkRequestId" />

    <div class="modal fade" id="addSubTaskModal" tabindex="-1" aria-labelledby="addSubTaskLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" style="margin-top: 100px;">
            <div class="modal-content bg-theme">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSubTaskLabel">Add Sub Task</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <partial name="_ValidationScriptsPartial" />
                <validation-summary class="text-danger" asp-validation-summary="ModelOnly"></validation-summary>

                <div class="modal-body">
                    <div class="mb-2">
                        <label asp-for="SubTaskTitle" class="form-label">Description:</label>
                        <input asp-for="SubTaskTitle" class="form-control" />
                        <span asp-validation-for="SubTaskTitle" class="text-danger"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="AssignedUserEmail" class="form-label">Assigned user:</label>
                        <select asp-for="AssignedUserEmail" class="form-control">
                            <option value="">Select a user</option>
                            @foreach (var user in Model.AssignableUsers)
                            {
                                <option value="@user.Email">@user.Email</option>
                            }
                        </select>
                        <span asp-validation-for="AssignedUserEmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" onclick="ShowSpinner(this)" class="btn btn-primary">Submit</button>
                </div>
                <div id="spinner" style="display:none">
                    <div style="width:100%; display:flex;">
                        <h5 style="margin: auto; padding: 5px;" id="spinnerText">Submitting sub task...</h5>
                    </div>
                    <div style="width:100%; display:flex; padding: 20px">
                        <div class="spinner-border text-primary" style="margin: auto; padding: 2px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />

